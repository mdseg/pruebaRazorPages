@page
@model PesoApp.Pages.Registros.IndexModel
@{
    ViewData["Title"] = "Lista de registros";
}
<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Lista de Registros</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secondary" asp-page="/Registros/Crear">Crear Nuevo registro</a>
        </div>
        <br />
        <br />

        @if (Model.Registros.Count() > 0)
        {
            <table id="tblCategorias" class="table table-striped table-bordered" style="width: 100%;">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Registros.FirstOrDefault().Id)</th>
                        <th>@Html.DisplayNameFor(m => m.Registros.FirstOrDefault().FechaIngreso)</th>
                        <th>@Html.DisplayNameFor(m => m.Registros.FirstOrDefault().Peso)</th>
                        <th>@Html.DisplayNameFor(m => m.Registros.FirstOrDefault().Cintura)</th>
                        <th>@Html.DisplayNameFor(m => m.Registros.FirstOrDefault().Cadera)</th>
                        <th>@Html.DisplayNameFor(m => m.Registros.FirstOrDefault().Pierna)</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var registro in Model.Registros)
                    {
                    <tr>
                        <td>@Html.DisplayFor(m => registro.Id)</td>
                        <td>@Html.DisplayFor(m => registro.FechaIngreso)</td>
                        <td>@Html.DisplayFor(m => registro.Peso)</td>
                        <td>@Html.DisplayFor(m => registro.Cintura)</td>
                        <td>@Html.DisplayFor(m => registro.Cadera)</td>
                        <td>@Html.DisplayFor(m => registro.Pierna)</td>
                        <td>
                            <a class="btn btn-success" asp-page="../Registros/Detalles" asp-route-id="@registro.Id">Detalle</a>
                            <a class="btn btn-warning" asp-page="../Registros/Editar" asp-route-id="@registro.Id">Editar</a>
                            <a class="btn btn-danger" asp-page="../Registros/Borrar" asp-route-id="@registro.Id">Borrar</a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <p>No hay registros</p>
        }
    </div>
</div>